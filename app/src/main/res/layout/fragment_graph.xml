<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MET.salman.MoeslemExpenseTracker.GraphFragment"
    android:background="#E5E5E5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.salman.myapplication.PieChartFragment"
        android:id="@+id/ChartFrg"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/linearLayout6"
        android:paddingBottom="10dp">

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:id="@+id/linearLayout6">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/PieChartBtn"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/diagram1"
            android:background="#6B9984" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/BarChartBtn"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/diagram2"
            android:background="#6B9984" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/LineChatBtn"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/diagram4"
            android:background="#6B9984" />
    </LinearLayout>

</RelativeLayout>
