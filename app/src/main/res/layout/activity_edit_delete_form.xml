<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.MET.salman.MoeslemExpenseTracker.EditDeleteForm"
    android:background="#E5E5E5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:background="#E5E5E5"
        android:layout_below="@+id/relativeLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Details"
            android:id="@+id/textView4"
            android:layout_marginBottom="10dp"
            android:textSize="24sp"
            android:textColor="#008263"
            android:layout_marginLeft="15dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:id="@+id/textView2"
                    android:textSize="16sp"
                    android:textColor="#212421" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DateTxt"
                    android:layout_column="1"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:textColor="#212421" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount:"
                    android:id="@+id/textView12"
                    android:textSize="16sp"
                    android:textColor="#212421" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/AmountTxt"
                    android:textSize="16sp"
                    android:textColor="#212421"
                    android:imeOptions="actionDone"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category:"
                    android:id="@+id/textView3"
                    android:textSize="16sp"
                    android:textColor="#212421" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/CategoryTxt"
                    android:layout_column="1"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:textColor="#212421" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout8"
        android:background="#212421"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT TRANSACTION"
            android:id="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/SaveBtn"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/save"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/DeleteBtn"
        android:scaleType="centerCrop"
        android:src="@drawable/delete"
        android:background="@android:color/transparent"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_alignTop="@+id/SaveBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
